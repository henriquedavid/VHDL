ENTITY codificadordeteclado IS
	PORT ( a, b, c, d : IN BIT;
			 o 			: OUT BIT_VECTOR( 11 DOWNTO 0 ));
END codificadordeteclado;

ARCHITECTURE codificador OF codificadordeteclado IS
BEGIN
	o(0) <= (NOT a AND NOT b AND NOT c AND NOT d);		-- representa o o numero 0
	o(1) <= (NOT a AND NOT b AND NOT c AND     d);		-- representa o o numero 1
	o(2) <= (NOT a AND NOT b AND     c AND NOT d);		-- representa o o numero 2
	o(3) <= (NOT a AND NOT b AND     c AND     d);		-- representa o o numero 3
	o(4) <= (NOT a AND     b AND NOT c AND NOT d);		-- representa o o numero 4
	o(5) <= (NOT a AND     b AND NOT c AND     d);		-- representa o o numero 5
	o(6) <= (NOT a AND     b AND     c AND NOT d);		-- representa o o numero 6
	o(7) <= (NOT a AND     b AND     c AND     d); 		-- representa o o numero 7
	o(8) <= (    a AND NOT b AND NOT c AND NOT d); 		-- representa o o numero 8
	o(9) <= (    a AND NOT b AND NOT c AND 	 d);		-- representa o o numero 9
END codificador;